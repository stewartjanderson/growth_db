<div class="panel">
      <div class="panel-body" id="inner">
          <div class="row">
             <div class="col-md-2 text-left"> 
                <div class="caption" style="text-align:center;">
                    <%= link_to upvote_hack_path(hack),  class: "upvote", method: :put do %>
                       <button type="button" class="btn btn-success" aria-label="Left Align">
                        <i class="fa fa-chevron-up"></i>
                        <span class="badge"><%= hack.get_upvotes.size %></span>
                       </button>
                    <% end %>
                    </div>
                    <div class="caption" style="text-align:center;">
                    <%= link_to unvote_hack_path(hack),  class: "unvote", method: :put do %>
                       <button type="button" class="btn btn-danger" aria-label="Left Align">
                        <i class="fa fa-chevron-down"></i>
                        <span class="badge"><%= hack.get_upvotes.size %></span>
                       </button>
                    <% end %>
                </div>
             </div>
             <div class="col-md-8"> 
                <%= link_to hack_path(hack) do %>
                <h3><%= hack.title %></h3>
                <% end %>
            </div>
          </div>
      </div>
      <div class="panel-footer text-center">
        <div class="row">
          <div class="col-md-4 text-left">
            <% if hack.category == "Acquisition" %>
              <span class="label label-default">Acquisition</span>
            <% elsif hack.category == "Activation" %>
              <span class="label label-danger">Activation</span>
            <% elsif hack.category == "Retention" %>
              <span class="label label-success">Retention</span>
            <% elsif hack.category == "Referral" %>
              <span class="label label-warning">Referral</span>
            <% elsif hack.category == "Revenue" %>
              <span class="label label-info">Revenue</span>
            <% else %>
            <% end %>
          </div>
          <div class="col-md-4 text-center">
          </div>
          <div class="col-md-4 text-right">
            <%= time_ago_in_words(hack.created_at) %> old
          </div>  
        </div>
      </div>
</div>