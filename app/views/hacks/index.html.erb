<p id="notice"><%= notice %></p>

<h1>Listing Hacks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Category</th>
      <th>Credit twitter handle</th>
      <th>Credit website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hacks.each do |hack| %>
      <tr>
        <td><%= hack.title %></td>
        <td><%= hack.content %></td>
        <td><%= hack.category %></td>
        <td><%= hack.credit_twitter_handle %></td>
        <td><%= hack.credit_website %></td>
        <td><%= link_to 'Show', hack %></td>
        <td><%= link_to 'Edit', edit_hack_path(hack) %></td>
        <td><%= link_to 'Destroy', hack, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

